<?xml version='1.0' encoding='utf-8'?>
<mujoco model="SimpleArm_scene">
  <option timestep="0.002" />
  <include file="bot.xml" />
  <statistic extent="2" center="0 0.1 0.4" />
  <visual>
    <headlight ambient=".4 .4 .4" diffuse=".8 .8 .8" specular="0.1 0.1 0.1" />
    <map znear="0.01" />
    <quality shadowsize="2048" />
  </visual>
  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0"
             width="512" height="3072" />
    <texture type="2d" name="groundplane" builtin="checker" mark="edge"
             rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8"
             width="300" height="300" />
    <material name="groundplane" texture="groundplane" texuniform="true"
              texrepeat="5 5" reflectance="0.2" />
  </asset>
  <worldbody>
    <light directional="true" diffuse=".8 .8 .8" pos="0 0 10" dir="0 0 -1" />
    <geom name="floor" type="plane" size="2 2 0.1" material="groundplane"
          contype="1" conaffinity="3" />

    <!-- Workspace camera: angled overhead view of table and arm -->
    <camera name="camera_1_cam" fovy="60"
            pos="0.7 -0.4 1.0" xyaxes="-0.4 1 0 -0.3 -0.12 0.95" />

    <!-- Table surface (top at z=0.40) â€” contype=1 so arm (contype=2) passes through -->
    <geom name="table_surface" type="box" size="0.30 0.25 0.02"
          pos="0 0.25 0.38" rgba="0.6 0.45 0.3 1.0"
          contype="1" conaffinity="1"
          solref="0.005 1" solimp="0.999 0.9999 0.001 0.5 2" />
    <!-- Table legs -->
    <geom name="table_leg_1" type="cylinder" size="0.015 0.18"
          pos="0.25 0.05 0.18" rgba="0.5 0.35 0.2 1.0"
          contype="1" conaffinity="1" />
    <geom name="table_leg_2" type="cylinder" size="0.015 0.18"
          pos="-0.25 0.05 0.18" rgba="0.5 0.35 0.2 1.0"
          contype="1" conaffinity="1" />
    <geom name="table_leg_3" type="cylinder" size="0.015 0.18"
          pos="0.25 0.45 0.18" rgba="0.5 0.35 0.2 1.0"
          contype="1" conaffinity="1" />
    <geom name="table_leg_4" type="cylinder" size="0.015 0.18"
          pos="-0.25 0.45 0.18" rgba="0.5 0.35 0.2 1.0"
          contype="1" conaffinity="1" />

    <!-- Cup: free body on the table (graspable object) -->
    <body name="cup" pos="0 0.25 0.44">
      <freejoint name="cup_joint" />
      <inertial pos="0 0 0" mass="0.05"
                fullinertia="0.00002 0.00002 0.00001 0 0 0" />
      <geom name="cup_geom" type="cylinder" size="0.025 0.04"
            rgba="1.0 0.2 0.2 1.0" friction="1.5 0.5 0.01"
            contype="3" conaffinity="3" />
    </body>

    <!-- Target: visual marker for lift goal (where to bring the cup) -->
    <body name="target" mocap="true" pos="0 0.25 0.65">
      <geom name="target_marker" type="sphere" size="0.025"
            rgba="0.0 1.0 0.0 0.4" contype="0" conaffinity="0" />
    </body>

    <!-- Distractors (hidden below ground, required by base env) -->
    <body name="distractor_0" mocap="true" pos="0 0 -1">
      <geom name="distractor_0_cube" type="box" size="0.05 0.05 0.05"
            rgba="0.2 0.4 1.0 1.0" contype="0" conaffinity="0" />
    </body>
    <body name="distractor_1" mocap="true" pos="0 0 -1">
      <geom name="distractor_1_cube" type="box" size="0.05 0.05 0.05"
            rgba="0.2 0.9 0.3 1.0" contype="0" conaffinity="0" />
    </body>
    <body name="distractor_2" mocap="true" pos="0 0 -1">
      <geom name="distractor_2_cube" type="box" size="0.05 0.05 0.05"
            rgba="0.9 0.2 0.2 1.0" contype="0" conaffinity="0" />
    </body>
    <body name="distractor_3" mocap="true" pos="0 0 -1">
      <geom name="distractor_3_cube" type="box" size="0.05 0.05 0.05"
            rgba="0.7 0.3 0.9 1.0" contype="0" conaffinity="0" />
    </body>
  </worldbody>
</mujoco>
